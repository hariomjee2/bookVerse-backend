# BookVerse Backend Environment Variables
# Copy this file to .env and update the values

# Node Environment
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGO_URI=mongodb://admin:password@localhost:27017/bookverse?authSource=admin
MONGO_USER=admin
MONGO_PASSWORD=password
MONGO_DB=bookverse

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Docker Environment Setup:
# For development locally: use MONGO_URI=mongodb://localhost:27017/bookverse
# For Docker Compose: use MONGO_URI=mongodb://admin:password@mongodb:27017/bookverse?authSource=admin
